<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="57dp"
        android:text="@string/phone"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="59dp"
        android:layout_toEndOf="@+id/tv_phone"
        android:layout_toRightOf="@+id/tv_phone"
        android:text="111"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_phone"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="36dp"
        android:text="@string/password"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_password_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_password"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="39dp"
        android:text="@string/confirm_password"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_input_password"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_phone_number"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_view_border"
        android:layout_toEndOf="@+id/tv_password"
        android:layout_toRightOf="@+id/tv_password"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/et_comfirm_password"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/et_input_password"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/input_view_border"
        android:layout_toEndOf="@+id/tv_password_confirm"
        android:layout_toRightOf="@+id/tv_password_confirm"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/bt_register_confirm"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_comfirm_password"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="85dp"
        android:layout_marginRight="85dp"
        android:background="@drawable/button_style"
        android:text="@string/confirm_register"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
</RelativeLayout>